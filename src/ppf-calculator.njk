            'conservative': { contribution: 50000, years: 15, rate: 7.1 },
            'moderate': { contribution: 100000, years: 15, rate: 7.1 },
            'maximum': { contribution: 150000, years: 15, rate: 7.1 }
        };

        const preset = presets[type];
        document.getElementById('annualContribution').value = preset.contribution;
        document.getElementById('annualContributionSlider').value = preset.contribution;
        document.getElementById('investmentPeriod').value = preset.years;
        document.getElementById('investmentPeriodSlider').value = preset.years;
        document.getElementById('interestRate').value = preset.rate;
        document.getElementById('interestRateSlider').value = preset.rate;

        calculatePPF();
    }

    // Calculate PPF
    function calculatePPF() {
        const annualContribution = parseFloat(document.getElementById('annualContribution').value);
        const years = parseInt(document.getElementById('investmentPeriod').value);
        const interestRate = parseFloat(document.getElementById('interestRate').value) / 100;

        // Validation
        if (annualContribution < 500 || annualContribution > 150000) {
            alert('Annual contribution must be between ₹500 and ₹1,50,000');
            return;
        }

        if (years < 15) {
            alert('PPF minimum period is 15 years');
            return;
        }

        if (!annualContribution || !years || !interestRate) {
            return;
        }

        let balance = 0;
        let totalContribution = 0;
        let balanceAfter7Years = 0;

        // Year-by-year calculation
        for (let year = 1; year <= years; year++) {
            // Add annual contribution
            balance += annualContribution;
            totalContribution += annualContribution;

            // Add interest (compounded annually)
            balance += balance * interestRate;

            // Capture balance after 7 years (for partial withdrawal)
            if (year === 7) {
                balanceAfter7Years = balance;
            }
        }

        const maturityValue = balance;
        const totalInterest = maturityValue - totalContribution;
        const partialWithdrawal = balanceAfter7Years * 0.50; // 50% withdrawal allowed

        // Tax benefit (Section 80C)
        const taxBenefit = Math.min(annualContribution, 150000); // Max ₹1.5L
        const taxSavings = taxBenefit * 0.30; // 30% tax bracket

        // GA4 Event Tracking
        trackCalculatorUsage('PPF Calculator', annualContribution);

        // Display Results
        document.getElementById('maturityValue').textContent = formatIndianCurrency(maturityValue);
        document.getElementById('totalContribution').textContent = formatIndianCurrency(totalContribution);
        document.getElementById('totalInterest').textContent = formatIndianCurrency(totalInterest);
        document.getElementById('taxBenefit').textContent = formatIndianCurrency(taxBenefit);
        document.getElementById('taxSavings').textContent = formatIndianCurrency(taxSavings).replace('₹', '');
        document.getElementById('partialWithdrawal').textContent = formatIndianCurrency(partialWithdrawal);

        // Breakdown
        document.getElementById('breakdown').innerHTML = `
            With an annual contribution of <strong>${formatIndianCurrency(annualContribution)}</strong> for ${years} years
            at <strong>${(interestRate * 100).toFixed(1)}%</strong> interest, your PPF account will mature with
            <strong>${formatIndianCurrency(maturityValue)}</strong>. This includes
            <strong>${formatIndianCurrency(totalInterest)}</strong> in completely tax-free interest earnings.
            You can withdraw up to <strong>${formatIndianCurrency(partialWithdrawal)}</strong>
            after 7 years for emergencies or specific needs.
        `;

        // Show results
        document.getElementById('results').classList.remove('hidden');
        document.getElementById('placeholder').classList.add('hidden');
    }

    // Initialize with default values
    window.addEventListener('load', function () {
        initAutoSave('ppf_calc');
        calculatePPF();
    });
</script>
