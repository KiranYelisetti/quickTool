<script>
    function formatIndianCurrency(num) {
        return '₹' + parseFloat(num).toLocaleString('en-IN', { minimumFractionDigits: 0, maximumFractionDigits: 0 });
    }

    function numberToWords(num) {
        if (num === 0) return '';

        const crore = Math.floor(num / 10000000);
        const lakh = Math.floor((num % 10000000) / 100000);
        const thousand = Math.floor((num % 100000) / 1000);
        const hundred = Math.floor((num % 1000) / 100);
        const remainder = num % 100;

        let words = [];
        if (crore > 0) words.push(crore + ' Crore');
        if (lakh > 0) words.push(lakh + ' Lakh');
        if (thousand > 0) words.push(thousand + ' Thousand');
        if (hundred > 0) words.push(hundred + ' Hundred');
        if (remainder > 0) words.push(remainder);

        return words.join(' ') + ' Rupees';
    }

    function calculateTotal() {
        const denominations = {
            note2000: 2000,
            note500: 500,
            note200: 200,
            note100: 100,
            note50: 50,
            note20: 20,
            note10: 10,
            coin10: 10,
            coin5: 5,
            coin2: 2,
            coin1: 1
        };

        let total = 0;
        for (const [id, value] of Object.entries(denominations)) {
            let count = parseInt(document.getElementById(id).value) || 0;
            // Limit invalid or excessive inputs
            if (count > 99999) {
                count = 99999;
                document.getElementById(id).value = 99999;
            }
            if (count < 0) {
                count = 0;
                document.getElementById(id).value = 0;
            }
            total += count * value;
        }

        document.getElementById('totalAmount').textContent = formatIndianCurrency(total);
        document.getElementById('totalInWords').textContent = total > 0 ? numberToWords(total) : '';
    }



    // Calculate on page load
    window.addEventListener('load', function () {
        initAutoSave('cash_counter');
        calculateTotal();
    });
</script>
