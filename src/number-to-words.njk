<script>
    const ones = ['', 'One', 'Two', 'Three', 'Four', 'Five', 'Six', 'Seven', 'Eight', 'Nine'];
    const teens = ['Ten', 'Eleven', 'Twelve', 'Thirteen', 'Fourteen', 'Fifteen', 'Sixteen', 'Seventeen', 'Eighteen', 'Nineteen'];
    const tens = ['', '', 'Twenty', 'Thirty', 'Forty', 'Fifty', 'Sixty', 'Seventy', 'Eighty', 'Ninety'];

    function numberToWordsBelow100(num) {
        if (num === 0) return '';
        if (num < 10) return ones[num];
        if (num < 20) return teens[num - 10];
        return tens[Math.floor(num / 10)] + (num % 10 ? ' ' + ones[num % 10] : '');
    }

    function numberToWordsBelow1000(num) {
        if (num === 0) return '';
        if (num < 100) return numberToWordsBelow100(num);
        const hundreds = Math.floor(num / 100);
        const remainder = num % 100;
        return ones[hundreds] + ' Hundred' + (remainder ? ' ' + numberToWordsBelow100(remainder) : '');
    }

    function numberToIndianWords(num) {
        if (num === 0) return 'Zero';

        const crore = Math.floor(num / 10000000);
        const lakh = Math.floor((num % 10000000) / 100000);
        const thousand = Math.floor((num % 100000) / 1000);
        const remainder = num % 1000;

        let words = [];

        if (crore > 0) {
            words.push(numberToIndianWords(crore) + ' Crore');
        }
        if (lakh > 0) {
            words.push(numberToWordsBelow100(lakh) + ' Lakh');
        }
        if (thousand > 0) {
            words.push(numberToWordsBelow1000(thousand) + ' Thousand');
        }
        if (remainder > 0) {
            words.push(numberToWordsBelow1000(remainder));
        }

        return words.join(' ');
    }

    function formatIndianNumber(num) {
        if (num === 0) return '0';

        const crore = Math.floor(num / 10000000);
        const lakh = Math.floor((num % 10000000) / 100000);
        const thousand = Math.floor((num % 100000) / 1000);
        const remainder = num % 1000;

        let parts = [];
        if (crore > 0) parts.push(crore + ' Crore');
        if (lakh > 0) parts.push(lakh + ' Lakh');
        if (thousand > 0) parts.push(thousand + ' Thousand');
        if (remainder > 0) parts.push(remainder);

        return parts.join(' ') || '0';
    }

    function formatInternationalNumber(num) {
        if (num === 0) return '0';

        const billion = Math.floor(num / 1000000000);
        const million = Math.floor((num % 1000000000) / 1000000);
        const thousand = Math.floor((num % 1000000) / 1000);
        const remainder = num % 1000;

        let parts = [];
        if (billion > 0) parts.push(billion + ' Billion');
        if (million > 0) parts.push(million + (million === 1 ? '' : '') + ' Million');
        if (thousand > 0) parts.push(thousand + ' Thousand');
        if (remainder > 0) parts.push(remainder);

        return parts.join(' ') || '0';
    }

    function convertNumber() {
        const input = document.getElementById('numberInput').value.replace(/[^0-9]/g, '');
        const num = parseInt(input) || 0;

        // Limit to 999 crores
        const limitedNum = Math.min(num, 99999999999);

        if (limitedNum !== num) {
            document.getElementById('numberInput').value = limitedNum;
        }

        // Indian Format
        document.getElementById('indianFormat').textContent = formatIndianNumber(limitedNum);

        // International Format
        document.getElementById('internationalFormat').textContent = formatInternationalNumber(limitedNum);

        // In Words
        const words = numberToIndianWords(limitedNum);
        document.getElementById('inWords').textContent = words + ' Rupees Only';

        // Cheque Format
        document.getElementById('chequeFormat').textContent = 'Rupees ' + words + ' Only';
    }

    function setExample(num) {
        document.getElementById('numberInput').value = num;
        convertNumber();
    }

    function copyToClipboard(elementId) {
        const text = document.getElementById(elementId).textContent;
        navigator.clipboard.writeText(text).then(() => {
            // Show temporary feedback
            const button = event.target.closest('button');
            const originalHTML = button.innerHTML;
            button.innerHTML = '<i class="fas fa-check"></i>';
            setTimeout(() => {
                button.innerHTML = originalHTML;
            }, 1000);
        });
    }

    // Calculate on page load
    window.addEventListener('load', function () {
        convertNumber();
    });
</script>
