<script>
    // Input Synchronization
    function syncInput(inputId, sliderId) {
        const input = document.getElementById(inputId);
        const slider = document.getElementById(sliderId);

        const value = event.target.value;
        input.value = value;
        slider.value = value;

        validateAndCalculate();
    }

    // Format Indian Currency
    function formatIndianCurrency(num) {
        const value = parseFloat(num);
        if (value >= 10000000) {
            return '₹' + (value / 10000000).toFixed(2) + ' Cr';
        } else if (value >= 100000) {
            return '₹' + (value / 100000).toFixed(2) + ' Lac';
        } else {
            return '₹' + value.toLocaleString('en-IN', { maximumFractionDigits: 0 });
        }
    }

    // Load Preset
    function loadPreset(type) {
        const presets = {
            'small': { age: 5, deposit: 50000, rate: 8.2 },
            'medium': { age: 5, deposit: 100000, rate: 8.2 },
            'maximum': { age: 5, deposit: 150000, rate: 8.2 }
        };

        const preset = presets[type];
        document.getElementById('currentAge').value = preset.age;
        document.getElementById('annualDeposit').value = preset.deposit;
        document.getElementById('annualDepositSlider').value = preset.deposit;
        document.getElementById('interestRate').value = preset.rate;
        document.getElementById('interestRateSlider').value = preset.rate;

        validateAndCalculate();
    }

    // Validate and Calculate
    function validateAndCalculate() {
        const currentAge = parseFloat(document.getElementById('currentAge').value);
        const annualDeposit = parseFloat(document.getElementById('annualDeposit').value);
        const interestRate = parseFloat(document.getElementById('interestRate').value) / 100;

        // Validation
        if (currentAge < 0 || currentAge > 10) {
            alert('Girl child must be under 10 years old to open SSY account');
            // Reset to max valid age to prevent confusing results
            if (currentAge > 10) document.getElementById('currentAge').value = 10;
            return;
        }

        if (annualDeposit < 250 || annualDeposit > 150000) {
            alert('Annual deposit must be between ₹250 and ₹1,50,000');
            return;
        }

        if (!currentAge || !annualDeposit || !interestRate) {
            return;
        }

        calculateSSY(currentAge, annualDeposit, interestRate);
    }

    // Calculate SSY
    function calculateSSY(currentAge, annualDeposit, interestRate) {
        const depositYears = 15; // Deposits required for 15 years
        const maturityYears = 21; // Account matures after 21 years

        let balance = 0;
        let totalInvestment = 0;
        let balanceAt18 = 0;

        // Year-by-year calculation
        for (let year = 1; year <= maturityYears; year++) {
            // Add annual deposit for first 15 years
            if (year <= depositYears) {
                balance += annualDeposit;
                totalInvestment += annualDeposit;
            }

            // Add interest (compounded annually)
            balance += balance * interestRate;

            // Capture balance when girl turns 18 (for partial withdrawal)
            const girlAge = currentAge + year;
            if (girlAge === 18) {
                balanceAt18 = balance;
            }
        }

        const maturityValue = balance;
        const totalInterest = maturityValue - totalInvestment;
        const partialWithdrawal = balanceAt18 * 0.50; // 50% withdrawal allowed

        // Tax benefit (Section 80C)
        const taxBenefit = Math.min(annualDeposit, 150000); // Max ₹1.5L
        const taxSavings = taxBenefit * 0.30; // 30% tax bracket

        // Display Results
        document.getElementById('maturityValue').textContent = formatIndianCurrency(maturityValue);
        document.getElementById('totalInvestment').textContent = formatIndianCurrency(totalInvestment);
        document.getElementById('totalInterest').textContent = formatIndianCurrency(totalInterest);
        document.getElementById('taxBenefit').textContent = formatIndianCurrency(taxBenefit);
        document.getElementById('taxSavings').textContent = formatIndianCurrency(taxSavings).replace('₹', '');
        document.getElementById('partialWithdrawal').textContent = formatIndianCurrency(partialWithdrawal);

        // Breakdown
        const maturityAge = currentAge + maturityYears;
        const depositEndAge = currentAge + depositYears;

        document.getElementById('breakdown').innerHTML = `
            With an annual deposit of <strong>${formatIndianCurrency(annualDeposit)}</strong> for 15 years
            (from age ${currentAge} to ${depositEndAge}), your daughter's SSY account will have
            <strong>${formatIndianCurrency(maturityValue)}</strong> when she turns ${maturityAge}.
            This includes <strong>${formatIndianCurrency(totalInterest)}</strong> in tax-free interest earnings.
            At age 18, she can withdraw up to <strong>${formatIndianCurrency(partialWithdrawal)}</strong>
            for higher education expenses.
        `;

        // Show results
        document.getElementById('results').classList.remove('hidden');
        document.getElementById('placeholder').classList.add('hidden');
    }

    // Initialize with default values
    window.addEventListener('load', function () {
        initAutoSave('ssy_calc');
        validateAndCalculate();
    });
</script>
