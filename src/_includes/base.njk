<!DOCTYPE html>
<html lang="en-IN">

<head>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-C3255KS80R"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-C3255KS80R');
    </script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Primary Meta Tags -->
    <title>{{ title | default("QuickTools India - Free Online Calculators & Tools") }}</title>
    <meta name="title" content="{{ meta_title | default(title) }}">
    <meta name="description" content="{{ meta_description | default('Free online calculators for India: Home Loan EMI, SIP, GST, and more.') }}">
    {% if meta_keywords %}
    <meta name="keywords" content="{{ meta_keywords }}">
    {% endif %}
    <meta name="author" content="QuickTools India">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://www.quicktoolsindia.com{{ page.url | replace('.html', '/') }}">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://www.quicktoolsindia.com{{ page.url }}">
    <meta property="og:title" content="{{ meta_title | default(title) }}">
    <meta property="og:description" content="{{ meta_description }}">
    <meta property="og:image" content="https://www.quicktoolsindia.com/og-image.png">
    <meta property="og:site_name" content="QuickTools India">
    <meta property="og:locale" content="en_IN">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://www.quicktoolsindia.com{{ page.url }}">
    <meta property="twitter:title" content="{{ meta_title | default(title) }}">
    <meta property="twitter:description" content="{{ meta_description }}">
    <meta property="twitter:image" content="https://www.quicktoolsindia.com/og-image.png">

    <!-- Additional SEO -->
    <meta name="theme-color" content="#4F46E5">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

    <!-- Local Tailwind Build -->
    <link rel="stylesheet" href="/css/styles.css">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Tailwind Config for Dark Mode (Inline for FOUC prevention) -->
    <script>
        // Initialize dark mode from localStorage on page load
        (function initDarkMode() {
            const darkMode = localStorage.getItem('darkMode');
            if (darkMode === 'enabled') {
                document.documentElement.classList.add('dark');
            }
        })();
    </script>

    {% if json_ld %}
    <script type="application/ld+json">
    {{ json_ld | dump | safe }}
    </script>
    {% endif %}

    {% block head %}{% endblock %}
</head>

<body class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800 min-h-screen transition-colors duration-200">
    {% include "header.njk" %}

    {{ content | safe }}

    {% include "footer.njk" %}

    <script src="/js/main.js"></script>

    {% block scripts %}{% endblock %}
</body>
</html>
