<script>
    let calculationType = 'add';

    function setCalculationType(type) {
        calculationType = type;

        const addBtn = document.getElementById('addBtn');
        const removeBtn = document.getElementById('removeBtn');

        if (type === 'add') {
            addBtn.classList.add('bg-blue-600', 'text-white', 'shadow-md');
            addBtn.classList.remove('bg-gray-200', 'text-gray-700');
            removeBtn.classList.remove('bg-blue-600', 'text-white', 'shadow-md');
            removeBtn.classList.add('bg-gray-200', 'text-gray-700');
        } else {
            removeBtn.classList.add('bg-blue-600', 'text-white', 'shadow-md');
            removeBtn.classList.remove('bg-gray-200', 'text-gray-700');
            addBtn.classList.remove('bg-blue-600', 'text-white', 'shadow-md');
            addBtn.classList.add('bg-gray-200', 'text-gray-700');
        }

        calculateGST();
    }

    // Show/hide custom rate input
    document.getElementById('gstRate').addEventListener('change', function () {
        const customRateDiv = document.getElementById('customRateDiv');
        if (this.value === 'custom') {
            customRateDiv.classList.remove('hidden');
        } else {
            customRateDiv.classList.add('hidden');
        }
        calculateGST();
    });

    function formatIndianCurrency(num) {
        return '₹' + parseFloat(num).toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    }

    function calculateGST() {
        const amount = parseFloat(document.getElementById('amount').value);
        const gstRateSelect = document.getElementById('gstRate').value;

        if (!amount || amount < 0) {
            return;
        }

        let gstRate;
        if (gstRateSelect === 'custom') {
            gstRate = parseFloat(document.getElementById('customRate').value);
        } else {
            gstRate = parseFloat(gstRateSelect);
        }

        let originalAmount, gstAmount, finalAmount;

        if (calculationType === 'add') {
            // Add GST to amount
            originalAmount = amount;
            gstAmount = (amount * gstRate) / 100;
            finalAmount = amount + gstAmount;

            document.getElementById('originalLabel').textContent = 'Amount (Before GST)';
            document.getElementById('finalLabel').textContent = 'Total Amount (With GST)';
        } else {
            // Remove GST from amount
            finalAmount = amount;
            originalAmount = (amount * 100) / (100 + gstRate);
            gstAmount = amount - originalAmount;

            document.getElementById('originalLabel').textContent = 'Amount (Without GST)';
            document.getElementById('finalLabel').textContent = 'Original Amount (With GST)';
        }

        // Calculate CGST and SGST (half of total GST each)
        const cgstAmount = gstAmount / 2;
        const sgstAmount = gstAmount / 2;
        const halfRate = (gstRate / 2).toFixed(2);

        // Display results
        document.getElementById('originalAmount').textContent = formatIndianCurrency(originalAmount);
        document.getElementById('gstAmount').textContent = formatIndianCurrency(gstAmount);
        document.getElementById('finalAmount').textContent = formatIndianCurrency(finalAmount);
        document.getElementById('rateDisplay').textContent = gstRate + '%';

        document.getElementById('cgstAmount').textContent = formatIndianCurrency(cgstAmount);
        document.getElementById('sgstAmount').textContent = formatIndianCurrency(sgstAmount);
        document.getElementById('cgstRate').textContent = halfRate + '%';
        document.getElementById('sgstRate').textContent = halfRate + '%';
    }

    // Calculate on page load
    window.addEventListener('load', function () {
        initAutoSave('gst_calc');
        calculateGST();
    });
</script>
