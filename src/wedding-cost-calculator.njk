<script>
    // Preset configurations
    const presets = {
        'simple': { budget: 1200000, years: 5, inflation: 8, destination: false, gold: false, goldAmount: 300000 },
        'middle': { budget: 2500000, years: 5, inflation: 8, destination: false, gold: true, goldAmount: 500000 },
        'grand': { budget: 5000000, years: 7, inflation: 9, destination: true, gold: true, goldAmount: 1000000 }
    };

    function updateInflation() {
        const value = document.getElementById('weddingInflation').value;
        document.getElementById('inflationValue').textContent = value;
        calculateWeddingCost();
    }

    function toggleGoldPurchase() {
        const goldSection = document.getElementById('goldAmountSection');
        const goldCheckbox = document.getElementById('goldPurchase');
        if (goldCheckbox.checked) {
            goldSection.classList.remove('hidden');
        } else {
            goldSection.classList.add('hidden');
        }
        calculateWeddingCost();
    }

    function loadPreset(type) {
        const preset = presets[type];
        document.getElementById('currentBudget').value = preset.budget;
        document.getElementById('yearsToWedding').value = preset.years;
        document.getElementById('weddingInflation').value = preset.inflation;
        document.getElementById('inflationValue').textContent = preset.inflation;
        document.getElementById('destinationWedding').checked = preset.destination;
        document.getElementById('goldPurchase').checked = preset.gold;
        document.getElementById('goldAmount').value = preset.goldAmount;

        if (preset.gold) {
            document.getElementById('goldAmountSection').classList.remove('hidden');
        } else {
            document.getElementById('goldAmountSection').classList.add('hidden');
        }

        calculateWeddingCost();
    }

    function calculateWeddingCost() {
        const baseBudget = parseFloat(document.getElementById('currentBudget').value);
        const years = parseInt(document.getElementById('yearsToWedding').value);
        const inflationRate = parseFloat(document.getElementById('weddingInflation').value) / 100;
        const isDestination = document.getElementById('destinationWedding').checked;
        const hasGold = document.getElementById('goldPurchase').checked;
        const goldAmount = hasGold ? parseFloat(document.getElementById('goldAmount').value) : 0;

        if (!baseBudget || !years) return;

        // Calculate wedding cost with inflation
        let futureWeddingCost = baseBudget * Math.pow((1 + inflationRate), years);

        // Add destination premium (20%)
        let destinationPremium = 0;
        if (isDestination) {
            destinationPremium = futureWeddingCost * 0.20;
            futureWeddingCost += destinationPremium;
        }

        // Calculate gold cost separately (10% inflation)
        let futureGoldCost = 0;
        if (hasGold) {
            const goldInflation = 0.10;
            futureGoldCost = goldAmount * Math.pow((1 + goldInflation), years);
        }

        // Total cost
        const totalFutureCost = futureWeddingCost + futureGoldCost;
        const currentTotalCost = baseBudget + (isDestination ? baseBudget * 0.20 : 0) + goldAmount;
        const increase = totalFutureCost - currentTotalCost;
        const increasePercentage = ((totalFutureCost / currentTotalCost - 1) * 100).toFixed(1);

        // Calculate SIP required (assuming 12% annual return)
        const monthlyReturn = Math.pow(1.12, 1 / 12) - 1;
        const months = years * 12;
        const sipRequired = (totalFutureCost * monthlyReturn) / (Math.pow(1 + monthlyReturn, months) - 1);

        // Display results
        document.getElementById('totalCost').textContent = '‚Çπ' + totalFutureCost.toLocaleString('en-IN', { maximumFractionDigits: 0 });
        document.getElementById('currentCost').textContent = '‚Çπ' + currentTotalCost.toLocaleString('en-IN', { maximumFractionDigits: 0 });
        document.getElementById('costIncrease').textContent = '+' + increasePercentage + '%';
        document.getElementById('resultYears').textContent = years;
        document.getElementById('monthlySIP').textContent = '‚Çπ' + sipRequired.toLocaleString('en-IN', { maximumFractionDigits: 0 }) + '/month';

        // Breakdown
        document.getElementById('weddingCost').textContent = '‚Çπ' + futureWeddingCost.toLocaleString('en-IN', { maximumFractionDigits: 0 });

        if (hasGold) {
            document.getElementById('goldCostRow').classList.remove('hidden');
            document.getElementById('goldCost').textContent = '‚Çπ' + futureGoldCost.toLocaleString('en-IN', { maximumFractionDigits: 0 });
        } else {
            document.getElementById('goldCostRow').classList.add('hidden');
        }

        if (isDestination) {
            document.getElementById('destinationCostRow').classList.remove('hidden');
            document.getElementById('destinationCost').textContent = '‚Çπ' + destinationPremium.toLocaleString('en-IN', { maximumFractionDigits: 0 });
        } else {
            document.getElementById('destinationCostRow').classList.add('hidden');
        }

        // Show results, hide placeholder
        document.getElementById('results').classList.remove('hidden');
        document.getElementById('placeholder').classList.add('hidden');
    }

    // Initial calculation with default values
    window.addEventListener('load', function () {
        initAutoSave('wedding_calc');
        calculateWeddingCost();
    });
</script>
