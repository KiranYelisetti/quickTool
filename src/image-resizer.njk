<script>
    let originalImage = null;
    let canvas = document.getElementById('canvas');
    let ctx = canvas.getContext('2d');

    function handleFileSelect(event) {
        const file = event.target.files[0];
        if (!file) return;

        const reader = new FileReader();
        reader.onload = function (e) {
            const img = new Image();
            img.onload = function () {
                originalImage = img;
                document.getElementById('customWidth').value = img.width;
                document.getElementById('customHeight').value = img.height;
                document.getElementById('originalSize').textContent = img.width + ' Ã— ' + img.height + ' px';

                // Show editor, hide upload
                document.getElementById('uploadSection').classList.add('hidden');
                document.getElementById('editorSection').classList.remove('hidden');

                // Initial render
                resizeImage();
            };
            img.src = e.target.result;
        };
        reader.readAsDataURL(file);
    }

    function updateResizeMode() {
        const mode = document.getElementById('resizeMode').value;

        document.getElementById('percentageMode').classList.add('hidden');
        document.getElementById('dimensionsMode').classList.add('hidden');
        document.getElementById('presetMode').classList.add('hidden');

        if (mode === 'percentage') {
            document.getElementById('percentageMode').classList.remove('hidden');
        } else if (mode === 'dimensions') {
            document.getElementById('dimensionsMode').classList.remove('hidden');
        } else if (mode === 'preset') {
            document.getElementById('presetMode').classList.remove('hidden');
        }

        resizeImage();
    }

    function updatePercentage() {
        const value = document.getElementById('percentage').value;
        document.getElementById('percentageValue').textContent = value;
        resizeImage();
    }

    function updateQuality() {
        const value = document.getElementById('quality').value;
        document.getElementById('qualityValue').textContent = value;
        resizeImage();
    }

    function updateCustomDimensions(changedDimension) {
        if (!originalImage) return;

        const maintainRatio = document.getElementById('maintainRatio').checked;
        if (!maintainRatio) {
            resizeImage();
            return;
        }

        const width = parseInt(document.getElementById('customWidth').value);
        const height = parseInt(document.getElementById('customHeight').value);
        const ratio = originalImage.width / originalImage.height;

        if (changedDimension === 'width') {
            document.getElementById('customHeight').value = Math.round(width / ratio);
        } else {
            document.getElementById('customWidth').value = Math.round(height * ratio);
        }

        resizeImage();
    }

    function applyPreset() {
        const preset = document.getElementById('presetSize').value;
        if (!preset) return;

        const [width, height] = preset.split(',').map(Number);
        document.getElementById('customWidth').value = width;
        document.getElementById('customHeight').value = height;
        resizeImage();
    }

    function resizeImage() {
        if (!originalImage) return;

        const mode = document.getElementById('resizeMode').value;
        let newWidth, newHeight;

        if (mode === 'percentage') {
            const percentage = parseInt(document.getElementById('percentage').value) / 100;
            newWidth = Math.round(originalImage.width * percentage);
            newHeight = Math.round(originalImage.height * percentage);
        } else {
            newWidth = parseInt(document.getElementById('customWidth').value) || originalImage.width;
            newHeight = parseInt(document.getElementById('customHeight').value) || originalImage.height;
        }

        // Resize canvas
        canvas.width = newWidth;
        canvas.height = newHeight;

        // Draw image
        ctx.drawImage(originalImage, 0, 0, newWidth, newHeight);

        // Update info
        document.getElementById('newSize').textContent = newWidth + ' Ã— ' + newHeight + ' px';

        // Estimate file size
        const format = document.getElementById('outputFormat').value;
        const quality = parseInt(document.getElementById('quality').value) / 100;
        canvas.toBlob((blob) => {
            if (blob) {
                const sizeMB = (blob.size / 1024 / 1024).toFixed(2);
                const sizeKB = (blob.size / 1024).toFixed(2);
                document.getElementById('fileSize').textContent = sizeMB > 1 ? sizeMB + ' MB' : sizeKB + ' KB';
            }
        }, format, quality);
    }

    function downloadImage() {
        // GA4 Event Tracking
        trackCalculatorUsage('Image Resizer', 'download');

        const format = document.getElementById('outputFormat').value;
        const quality = parseInt(document.getElementById('quality').value) / 100;

        canvas.toBlob((blob) => {
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;

            // Set filename with proper extension
            let extension = 'png';
            if (format === 'image/jpeg') extension = 'jpg';
            else if (format === 'image/webp') extension = 'webp';

            a.download = 'resized-image.' + extension;
            a.click();
            URL.revokeObjectURL(url);
        }, format, quality);
    }

    function resetTool() {
        originalImage = null;
        document.getElementById('uploadSection').classList.remove('hidden');
        document.getElementById('editorSection').classList.add('hidden');
        document.getElementById('fileInput').value = '';
    }

    // Update quality control visibility based on format
    document.getElementById('outputFormat').addEventListener('change', function () {
        const format = this.value;
        const qualityControl = document.getElementById('qualityControl');

        if (format === 'image/png') {
            qualityControl.classList.add('hidden');
        } else {
            qualityControl.classList.remove('hidden');
        }
        resizeImage();
    });

    // Drag and drop support
    const uploadSection = document.getElementById('uploadSection');
    uploadSection.addEventListener('dragover', (e) => {
        e.preventDefault();
        e.stopPropagation();
    });

    uploadSection.addEventListener('drop', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const files = e.dataTransfer.files;
        if (files.length > 0) {
            document.getElementById('fileInput').files = files;
            handleFileSelect({ target: { files: files } });
        }
    });
</script>
