<script>
    // Exchange rates (approximate, for calculation purposes)
    const exchangeRates = {
        'USD': 83,
        'GBP': 105,
        'EUR': 90,
        'AUD': 55,
        'CAD': 62
    };

    // Preset values for popular destinations
    const presets = {
        'USA': { currency: 'USD', cost: 200000, years: 10, inflation: 6, depreciation: 4 },
        'UK': { currency: 'GBP', cost: 120000, years: 10, inflation: 5.5, depreciation: 3.5 },
        'Canada': { currency: 'CAD', cost: 150000, years: 10, inflation: 5, depreciation: 3 }
    };

    function updateInflation() {
        const value = document.getElementById('inflationRate').value;
        document.getElementById('inflationValue').textContent = value;
        calculateCost();
    }

    function updateDepreciation() {
        const value = document.getElementById('depreciationRate').value;
        document.getElementById('depreciationValue').textContent = value;
        calculateCost();
    }

    function updateCurrencyDefaults() {
        const currency = document.getElementById('currency').value;
        // Update with typical costs for each destination
        const defaults = {
            'USD': 200000,
            'GBP': 120000,
            'EUR': 100000,
            'AUD': 180000,
            'CAD': 150000
        };
        document.getElementById('currentCost').value = defaults[currency];
        calculateCost();
    }

    function loadPreset(country) {
        const preset = presets[country];
        document.getElementById('currency').value = preset.currency;
        document.getElementById('currentCost').value = preset.cost;
        document.getElementById('yearsToStudy').value = preset.years;
        document.getElementById('inflationRate').value = preset.inflation;
        document.getElementById('depreciationRate').value = preset.depreciation;
        document.getElementById('inflationValue').textContent = preset.inflation;
        document.getElementById('depreciationValue').textContent = preset.depreciation;
        calculateCost();
    }

    function calculateCost() {
        const currency = document.getElementById('currency').value;
        const currentCost = parseFloat(document.getElementById('currentCost').value);
        const years = parseInt(document.getElementById('yearsToStudy').value);
        const inflationRate = parseFloat(document.getElementById('inflationRate').value) / 100;
        const depreciationRate = parseFloat(document.getElementById('depreciationRate').value) / 100;

        if (!currentCost || !years) return;

        const exchangeRate = exchangeRates[currency];

        // Calculate future cost in foreign currency (with education inflation)
        const futureCostForeign = currentCost * Math.pow((1 + inflationRate), years);

        // Calculate future exchange rate (with currency depreciation)
        const futureExchangeRate = exchangeRate * Math.pow((1 + depreciationRate), years);

        // Calculate future cost in INR
        const futureCostINR = futureCostForeign * futureExchangeRate;

        // Calculate current cost in INR (today's exchange rate)
        const currentCostINR = currentCost * exchangeRate;

        // Calculate increase
        const increase = futureCostINR - currentCostINR;
        const increasePercentage = ((futureCostINR / currentCostINR - 1) * 100).toFixed(1);

        // Calculate individual impacts
        const costWithJustInflation = currentCost * Math.pow((1 + inflationRate), years) * exchangeRate;
        const costWithJustDepreciation = currentCost * futureExchangeRate;
        const inflationImpactAmount = costWithJustInflation - currentCostINR;
        const depreciationImpactAmount = costWithJustDepreciation - currentCostINR;

        // Combined effective rate
        const combinedRate = ((Math.pow(futureCostINR / currentCostINR, 1 / years) - 1) * 100).toFixed(2);

        // Calculate SIP required (assuming 12% annual return)
        const monthlyReturn = Math.pow(1.12, 1 / 12) - 1;
        const months = years * 12;
        const sipRequired = (futureCostINR * monthlyReturn) / (Math.pow(1 + monthlyReturn, months) - 1);

        // Display results
        document.getElementById('totalCostINR').textContent = '‚Çπ' + futureCostINR.toLocaleString('en-IN', { maximumFractionDigits: 0 });
        document.getElementById('totalCostForeign').textContent = currency + ' ' + futureCostForeign.toLocaleString('en-US', { maximumFractionDigits: 0 });
        document.getElementById('currentCostINR').textContent = '‚Çπ' + currentCostINR.toLocaleString('en-IN', { maximumFractionDigits: 0 });
        document.getElementById('costIncrease').textContent = '+' + increasePercentage + '%';
        document.getElementById('resultYears').textContent = years;

        document.getElementById('inflationImpact').textContent = '‚Çπ' + inflationImpactAmount.toLocaleString('en-IN', { maximumFractionDigits: 0 });
        document.getElementById('depreciationImpact').textContent = '‚Çπ' + depreciationImpactAmount.toLocaleString('en-IN', { maximumFractionDigits: 0 });
        document.getElementById('combinedRate').textContent = combinedRate + '% per year';

        document.getElementById('monthlySIP').textContent = '‚Çπ' + sipRequired.toLocaleString('en-IN', { maximumFractionDigits: 0 }) + '/month';

        // Show results, hide placeholder
        document.getElementById('results').classList.remove('hidden');
        document.getElementById('placeholder').classList.add('hidden');
    }

    // Initial calculation with default values
    window.addEventListener('load', function () {
        initAutoSave('study_abroad');
        calculateCost();
    });
</script>
